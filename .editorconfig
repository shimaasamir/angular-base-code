root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,ts}]
quote_type = single

[*.json]
insert_final_newline = ignore

[{Makefile,**.mk}]
indent_style = tab

[*.md]
max_line_length = off
trim_trailing_whitespace = false
